@model IList<LSCargo.Web.Models.Regions.Teaser>

@if (Model.Count > 0)
{
    var pos = 0;
    var size = 4;

    while (pos < Model.Count)
    {
        var rest = Model.Count - pos;
        var cols = 0;

        if (rest == 1)
        {
            size = 8;
            cols = 1;
        }
        else if (rest <= 4 && rest % 3 != 0 && rest % 2 == 0)
        {
            size = 6;
            cols = 2;
        }
        else
        {
            size = 4;
            cols = 3;
        }

        <div class="row justify-content-center">
            @for (var n = 0; n < cols; n++)
            {
                var teaser = Model[pos + n];

                <div class="col col-sm-6 col-md-@size">
                    @Html.DisplayFor(m => teaser)
                </div>
            }
        </div>
        pos += cols;
    }
}